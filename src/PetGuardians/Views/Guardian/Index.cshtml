@model List<PetGuardians.Models.Guardian.OfferVm>


<div class="container">
    <h3>Wyszukaj ofertę dla siebie</h3>
    <table class="table table-hover">
        <tr>
            <th>Nazwa oferty</th>
            <th>Opis</th>
            <th>Miasto</th>
            <th>Opieka od</th>
            <th>Do</th>
            <th>Cena</th>
        </tr>
        @foreach (var offer in Model)
        {
            <tr>
                <td>@offer.Name</td>
                <td>@offer.Description</td>
                <td>@offer.Town</td>
                <td>@offer.From</td>
                <td>@offer.To</td>
                <td>@offer.Price</td>
            </tr>
        }
    </table>
</div>